- name: install apache and php 
  tags: apache,httpd,php
  package:
    name:
      - "{{ apache_package_name }}"
      - "{{ php_package_name }}"
    state: latest

- name: start and enable apache/httpd service
  tags: apache,httpd
  service:
    - "{{ apache_service }}"
    state: started
    enabled: yes

- name: change email address in admin file
  tags: apache,RedHat,httpd
  lineinfile:
    path: /etc/httpd/conf/httpd.conf
    regex: '^ServerAdmin'
    line: ServerAdmin ServerAdmins@bennettwi.com
  when: ansible_distribution in "RedHat"
  register: apache

- name: restart httpd when apache file is changed (RedHat)
  tags: apache,RedHat
  service:
    name: "{{ apache_service }}"
    state: restarted
  when: apache.changed

- name: copy default html
  tags: apache,apache2,Ubuntu
  copy:
    src: default_site.html
    dest: /var/www/html/index.html
    owner: root
    group: root
    mode: 0644
